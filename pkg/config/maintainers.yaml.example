# Maintainers configuration for weekly email reports
# This file maps repositories to maintainer email addresses

# List of maintainers - each entry associates a repository with a maintainer's email
# Multiple entries can share the same email address, which will result in one
# consolidated email containing all repositories for that maintainer
maintainers:
  # Example: Single maintainer for one repository
  - org: konveyor
    repo: analyzer-lsp
    email: maintainer@example.com
    name: John Doe

  # Example: Same maintainer for multiple repositories
  # (will receive one email with all repos)
  - org: konveyor
    repo: kai
    email: maintainer@example.com
    name: John Doe

  # Example: Different maintainer for another repository
  - org: konveyor
    repo: tackle2-hub
    email: another-maintainer@example.com
    name: Jane Smith

  # Example: Multiple maintainers for the same repository
  # (each will receive their own separate email)
  - org: konveyor
    repo: kantra
    email: lead-maintainer@example.com
    name: Lead Maintainer

  - org: konveyor
    repo: kantra
    email: co-maintainer@example.com
    name: Co-Maintainer

# Optional: CC email addresses that will receive all emails
# Useful for team leads or project managers who want visibility
cc_emails:
  - team-lead@example.com
  - project-manager@example.com

# Team Goals Configuration (Optional)
# Track progress on team-wide goals across all repositories
# Set enabled to false to disable goals tracking
goals:
  enabled: true
  # Baseline number of stale backlog items (90+ days old) at start of tracking period
  backlog_baseline: 100
  # Date when baseline was captured (YYYY-MM-DD format)
  backlog_baseline_date: "2026-01-01"
  # Files to check for ownership documentation
  ownership_files:
    - "OWNERS"
    - "OWNERS.md"
    - "CODEOWNERS"
    - "README.md"

# Action Items Configuration (Optional)
# Track items requiring immediate maintainer attention
# Set enabled to false to disable action items tracking
action_items:
  enabled: true
  # Hours before flagging issues without maintainer response
  issue_response_time_hours: 48
  # Hours before flagging PRs without any review
  pr_review_wait_hours: 72
  # Check for failing default branch CI
  check_default_branch_ci: true
  # Check for approved PRs ready to merge
  check_approved_prs: true
  # Check for PRs from external/first-time contributors
  check_external_contributors: true
  # Check for PRs awaiting author response after changes requested
  check_prs_awaiting_author: true
  # Days before flagging PRs awaiting author response
  pr_awaiting_author_response_days: 7

# SMTP configuration for sending emails
# Note: SMTP username and password are read from environment variables
# SMTP_USERNAME and SMTP_PASSWORD (typically set in GitHub Secrets)
smtp:
  # SMTP server address
  server: smtp.gmail.com

  # SMTP server port (587 for TLS/STARTTLS, 465 for SSL)
  port: 587

  # Email address to send from
  from_email: noreply-konveyor@example.com

  # Display name for the sender
  from_name: Konveyor Health Reports

# SMTP Configuration Examples:
#
# Gmail (requires app-specific password):
# server: smtp.gmail.com
# port: 587
# SMTP_USERNAME: your-email@gmail.com
# SMTP_PASSWORD: your-app-specific-password
#
# Office 365:
# server: smtp.office365.com
# port: 587
# SMTP_USERNAME: your-email@company.com
# SMTP_PASSWORD: your-password
#
# SendGrid:
# server: smtp.sendgrid.net
# port: 587
# SMTP_USERNAME: apikey
# SMTP_PASSWORD: your-sendgrid-api-key
#
# AWS SES:
# server: email-smtp.us-east-1.amazonaws.com
# port: 587
# SMTP_USERNAME: your-ses-smtp-username
# SMTP_PASSWORD: your-ses-smtp-password
